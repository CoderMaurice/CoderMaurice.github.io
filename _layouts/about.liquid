---
layout: default
---
<div class="post">
  <header class="post-header about-hero">
    {% if page.profile and page.profile.image %}
      <div class="about-hero-profile">
        {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
        {% if page.profile.image_circular %}
          {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
        {% else %}
          {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
        {% endif %}
        {% capture sizes %}(min-width: {{ site.max_width }}) 240px, 60vw{% endcapture %}
        {%
          include figure.liquid
          loading="eager"
          path=profile_image_path
          class=profile_image_class
          sizes=sizes
          alt=page.profile.image
          cache_bust=true
        %}
      </div>
    {% endif %}

    <h1 class="post-title">
      {% if site.title == 'blank' %}
        <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
        {{ site.last_name }}
      {% else %}
        {{ site.title }}
      {% endif %}
    </h1>

    {% if page.social %}
      <div class="social about-hero-social">
        <div class="contact-icons">
          {% if page.contact_modal and page.contact_modal.enabled != false %}
            <a
              class="contact-trigger"
              role="button"
              data-toggle="modal"
              href="#contactInfoModal"
              aria-label="Open contact information"
            >
              <i class="fa-solid fa-comment-dots"></i>
            </a>
          {% endif %}
          {% social_links %}
        </div>
      </div>
    {% endif %}
  </header>

  {% if page.contact_modal and page.contact_modal.enabled != false %}
    <div class="modal fade contact-info-modal" id="contactInfoModal" tabindex="-1" role="dialog" aria-labelledby="contactInfoModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <h5 class="sr-only" id="contactInfoModalLabel">{{ page.contact_modal.title | default: 'Contact' }}</h5>
          <div class="contact-modal-topbar">
            {% if page.contact_modal.intro %}
              <p class="contact-modal-intro">{{ page.contact_modal.intro }}</p>
            {% endif %}
            <button type="button" class="close contact-modal-close" data-dismiss="modal" aria-label="Close">
              <i class="fa-solid fa-xmark" aria-hidden="true"></i>
            </button>
          </div>
          <div class="modal-body">
            {% if page.contact_modal.items %}
              <ul class="list-unstyled contact-modal-list mb-0">
                {% for item in page.contact_modal.items %}
                  {% assign label_lc = item.label | downcase %}
                  <li class="contact-modal-item">
                    <span class="contact-modal-item-icon" aria-hidden="true">
                      {% if label_lc contains 'email' %}
                        <i class="fa-regular fa-envelope"></i>
                      {% elsif label_lc contains 'wechat' %}
                        <i class="fa-brands fa-weixin"></i>
                      {% elsif label_lc contains 'github' %}
                        <i class="fa-brands fa-github"></i>
                      {% elsif label_lc contains 'scholar' %}
                        <i class="ai ai-google-scholar"></i>
                      {% elsif label_lc contains 'linkedin' %}
                        <i class="fa-brands fa-linkedin"></i>
                      {% else %}
                        <i class="fa-solid fa-link"></i>
                      {% endif %}
                    </span>
                    <div class="contact-modal-item-body">
                      <span class="contact-modal-item-label">{{ item.label }}</span>
                      {% if label_lc contains 'email' %}
                        <span class="contact-modal-item-value">{{ item.value }}</span>
                      {% elsif item.href %}
                        <a class="contact-modal-item-value" href="{{ item.href }}" target="_blank" rel="noopener noreferrer">{{ item.value }}</a>
                      {% else %}
                        <span class="contact-modal-item-value">{{ item.value }}</span>
                      {% endif %}
                    </div>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  {% endif %}

  <article>
    <div class="clearfix">{{ content }}</div>

    <!-- News -->
    {% if page.announcements and page.announcements.enabled %}
      <h2>
        <a href="{{ '/news/' | relative_url }}" style="color: inherit">news</a>
      </h2>
      {% include news.liquid limit=true %}
    {% endif %}

    <!-- Latest posts -->
    {% if page.latest_posts and page.latest_posts.enabled %}
      <h2>
        <a href="{{ '/blog/' | relative_url }}" style="color: inherit">latest posts</a>
      </h2>
      {% include latest_posts.liquid %}
    {% endif %}

    <!-- Selected papers -->
    {% if page.selected_papers %}
      <h2>
        <a href="{{ '/publications/' | relative_url }}" style="color: inherit">selected publications</a>
      </h2>
      {% include selected_papers.liquid %}
    {% endif %}

    {% if site.newsletter and site.newsletter.enabled and site.footer_fixed %}
      {% include newsletter.liquid center=true %}
    {% endif %}
  </article>
</div>
